---
import Layout from '../layouts/Layout.astro'
import Page from '../components/layout/Page'
import Header from '../components/pages/home/Header'
import Skills from '../components/pages/home/Skills'
import Title from '../components/pages/home/Title'
import Testimonials from '../components/pages/home/Testimonials'

import * as content from '../data/home/home.md'
import * as testimonial from '../data/testimonials/jannik.md'
import * as project from '../data/projects/musical.md'
import Projects from '@/components/pages/home/Projects'
---

<Layout title="Portfolio">
  <Header
    title={content.frontmatter.title}
    subtitle={content.frontmatter.subtitle}
    client:load
  />
  <Page>
    <Title title="Stack" subtitle="Technologien, mit denen ich arbeite." className='mb-6 mt-32' />
    <Skills client:visible />

    <Title title="Projekte" subtitle="Eine Auswahl meiner Arbeiten." className='mb-6 mt-32' />
    <Projects {...project.frontmatter} client:visible>
      <project.Content />
    </Projects>

    <Title title="Referenzen" subtitle="RÃ¼ckmeldungen von Personen." className='mb-6 mt-32' />
    <Testimonials {...testimonial.frontmatter} client:visible>
      <testimonial.Content />
    </Testimonials>
  </Page>
</Layout>
